    <script>
        // Script para el botón de accesibilidad: abre un panel con opciones y persiste la configuración
        document.addEventListener('DOMContentLoaded', function () {
            const toggle = document.getElementById('accessibilityToggle');
            const backdrop = document.getElementById('accessibilityBackdrop');
            const panel = document.getElementById('accessibilityPanel');
            const storageKey = 'accessibilitySettings';

            const accSwitch = document.getElementById('accSwitch');
            const selectFont = document.getElementById('accFont');
            const rangeSize = document.getElementById('accSize');
            const accSizeMinus = document.getElementById('accSizeMinus');
            const accSizePlus = document.getElementById('accSizePlus');
            const accSizeDisplay = document.getElementById('accSizeDisplay');
            const swatches = document.querySelectorAll('.accessibility-swatch');
            const textSwatches = document.querySelectorAll('.textcolor-swatch');
            const textPicker = document.getElementById('accTextColorPicker');
            const btnApply = document.getElementById('accApply');
            const btnReset = document.getElementById('accReset');
            const overlay = document.getElementById('pageOverlay');

            if (!toggle || !backdrop || !panel) return;

            // tamaño raíz original (para impedir que el panel cambie cuando escalamos la app)
            const originalRootFontSize = window.getComputedStyle(document.documentElement).fontSize || '16px';

            function openPanel() {
                backdrop.style.display = 'flex';
                backdrop.setAttribute('aria-hidden', 'false');
                // posicionar panel: si hay posición guardada, usarla; si no, centrar
                try {
                    const posRaw = localStorage.getItem('accessibilityPanelPos');
                    panel.style.position = 'absolute';
                    if (posRaw) {
                        const pos = JSON.parse(posRaw);
                        panel.style.left = (pos.x || (window.innerWidth - panel.offsetWidth) / 2) + 'px';
                        panel.style.top = (pos.y || (window.innerHeight - panel.offsetHeight) / 2) + 'px';
                    } else {
                        panel.style.left = Math.max(16, (window.innerWidth - panel.offsetWidth) / 2) + 'px';
                        panel.style.top = Math.max(48, (window.innerHeight - panel.offsetHeight) / 2) + 'px';
                    }
                } catch (e) {
                    // fallback: centrar
                    panel.style.position = 'absolute';
                    panel.style.left = Math.max(16, (window.innerWidth - panel.offsetWidth) / 2) + 'px';
                    panel.style.top = Math.max(48, (window.innerHeight - panel.offsetHeight) / 2) + 'px';
                }
                // focus first control
                if (accSwitch) accSwitch.focus();
            }

            function closePanel() {
                backdrop.style.display = 'none';
                backdrop.setAttribute('aria-hidden', 'true');
                toggle.focus();
            }

            function applySettings(s) {
                if (!s) s = { enabled: false };
                if (s.enabled) {
                    document.documentElement.classList.add('accessibility-mode');
                    toggle.classList.add('active');
                    toggle.setAttribute('aria-pressed', 'true');
                } else {
                    document.documentElement.classList.remove('accessibility-mode');
                    toggle.classList.remove('active');
                    toggle.setAttribute('aria-pressed', 'false');
                }

                if (s.font && s.font.length) document.documentElement.style.setProperty('--acc-font', s.font);
                else document.documentElement.style.removeProperty('--acc-font');

                // Aplicar tamaño global: cambiamos el font-size raíz para que componentes que usan rem escalen.
                try {
                    if (s.size) {
                        document.documentElement.style.setProperty('font-size', (s.size / 100) + 'rem');
                    } else {
                        document.documentElement.style.removeProperty('font-size');
                    }
                    // Evitar que el propio panel de accesibilidad escale: fijar su font-size al original
                    if (panel) panel.style.fontSize = originalRootFontSize;
                } catch (e) { console.warn('Accesibilidad: error aplicando tamaño global', e); }

                // aplicar color de texto
                if (s.textColor && s.textColor.length) document.documentElement.style.setProperty('--acc-text-color', s.textColor);
                else document.documentElement.style.removeProperty('--acc-text-color');

                // aplicar color sobre la capa de overlay si existe
                try {
                    if (overlay) {
                        if (s.bg && s.bg.length) overlay.style.backgroundColor = s.bg;
                        else overlay.style.backgroundColor = '';
                    }
                } catch (e) { console.warn(e); }
            }

            function saveSettings(s) {
                try { localStorage.setItem(storageKey, JSON.stringify(s)); } catch (e) { console.warn('Accesibilidad: error guardando', e); }
            }

            // sincronización de controles con settings (se usa en carga inicial y cuando cambian en otra ventana)
            function populateControls(s) {
                try {
                    if (!s) s = { enabled: false };
                    setSwitchState(!!s.enabled);
                    selectFont.value = s.font || '';
                    rangeSize.value = s.size || 105;
                    swatches.forEach(x => x.classList.toggle('selected', x.dataset.color === (s.bg || '')));
                    // texto
                    textSwatches.forEach(x => x.classList.toggle('selected', x.dataset.color === (s.textColor || '')));
                    if (textPicker && s.textColor) textPicker.value = s.textColor;
                    if (accSizeDisplay) accSizeDisplay.textContent = (rangeSize.value || 105) + '%';
                } catch (e) { console.warn('Accesibilidad: error poblando controles', e); }
            }

            // cargar preferencia inicial
            try {
                const raw = localStorage.getItem(storageKey);
                if (raw) {
                    const saved = JSON.parse(raw);
                    populateControls(saved);
                    applySettings(saved);
                }
            } catch (e) { console.warn('Accesibilidad: error leyendo preferencias', e); }

            // Escuchar cambios desde otras pestañas/ventanas y aplicar en caliente
            window.addEventListener('storage', function (ev) {
                if (ev.key !== storageKey) return;
                try {
                    const newVal = ev.newValue ? JSON.parse(ev.newValue) : { enabled: false };
                    populateControls(newVal);
                    applySettings(newVal);
                } catch (err) { console.warn('Accesibilidad: error aplicando cambios desde storage', err); }
            });

            // abrir panel al clicar el icono
            toggle.addEventListener('click', function () {
                openPanel();
            });

            // seleccionar swatch
            swatches.forEach(s => {
                s.addEventListener('click', function () {
                    swatches.forEach(x => x.classList.remove('selected'));
                    s.classList.add('selected');
                });
            });

            // text color swatches
            textSwatches.forEach(ts => {
                ts.addEventListener('click', function () {
                    textSwatches.forEach(x => x.classList.remove('selected'));
                    ts.classList.add('selected');
                    if (textPicker) textPicker.value = ts.dataset.color || '#000000';
                });
            });

            if (textPicker) {
                textPicker.addEventListener('input', function () {
                    textSwatches.forEach(x => x.classList.remove('selected'));
                });
            }

            // Switch behavior (visual)
            function setSwitchState(on) {
                if (!accSwitch) return;
                if (on) {
                    accSwitch.classList.add('on');
                    accSwitch.setAttribute('aria-checked', 'true');
                } else {
                    accSwitch.classList.remove('on');
                    accSwitch.setAttribute('aria-checked', 'false');
                }
            }

            if (accSwitch) {
                accSwitch.addEventListener('click', function () {
                    const now = !accSwitch.classList.contains('on');
                    setSwitchState(now);
                });
                accSwitch.addEventListener('keydown', function (e) { if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); accSwitch.click(); } });
            }

            // tamaño: +/- y display
                if (rangeSize) {
                rangeSize.addEventListener('input', function () {
                    if (accSizeDisplay) accSizeDisplay.textContent = rangeSize.value + '%';
                    // live preview: cambiar font-size raíz para que todo use rem; luego fijar el panel al tamaño original
                    try {
                        document.documentElement.style.setProperty('font-size', (parseInt(rangeSize.value, 10) / 100) + 'rem');
                        if (panel) panel.style.fontSize = originalRootFontSize;
                    } catch (e) { console.warn('Accesibilidad: error preview tamaño', e); }
                });
            }
            if (accSizeMinus) accSizeMinus.addEventListener('click', function () { rangeSize.value = Math.max(parseInt(rangeSize.min, 10), parseInt(rangeSize.value, 10) - 5); rangeSize.dispatchEvent(new Event('input')); });
            if (accSizePlus) accSizePlus.addEventListener('click', function () { rangeSize.value = Math.min(parseInt(rangeSize.max, 10), parseInt(rangeSize.value, 10) + 5); rangeSize.dispatchEvent(new Event('input')); });

            // DRAG: permitir mover el panel por su cabecera (h2)
            (function makeDraggable() {
                const header = panel.querySelector('h2');
                let dragging = false;
                let startX = 0, startY = 0, origX = 0, origY = 0;

                function onDown(e) {
                    e.preventDefault();
                    dragging = true;
                    panel.classList.add('draggable');
                    const rect = panel.getBoundingClientRect();
                    origX = rect.left; origY = rect.top;
                    startX = (e.touches ? e.touches[0].clientX : e.clientX);
                    startY = (e.touches ? e.touches[0].clientY : e.clientY);
                    document.addEventListener('mousemove', onMove);
                    document.addEventListener('mouseup', onUp);
                    document.addEventListener('touchmove', onMove, { passive: false });
                    document.addEventListener('touchend', onUp);
                }

                function onMove(e) {
                    if (!dragging) return;
                    e.preventDefault();
                    const curX = (e.touches ? e.touches[0].clientX : e.clientX);
                    const curY = (e.touches ? e.touches[0].clientY : e.clientY);
                    const dx = curX - startX;
                    const dy = curY - startY;
                    let left = Math.round(origX + dx);
                    let top = Math.round(origY + dy);
                    // limitar dentro de la ventana
                    left = Math.max(8, Math.min(left, window.innerWidth - panel.offsetWidth - 8));
                    top = Math.max(8, Math.min(top, window.innerHeight - panel.offsetHeight - 8));
                    panel.style.left = left + 'px';
                    panel.style.top = top + 'px';
                }

                function onUp() {
                    if (!dragging) return;
                    dragging = false;
                    panel.classList.remove('draggable');
                    document.removeEventListener('mousemove', onMove);
                    document.removeEventListener('mouseup', onUp);
                    document.removeEventListener('touchmove', onMove);
                    document.removeEventListener('touchend', onUp);
                    // guardar posición
                    try {
                        const left = parseInt(panel.style.left || '0', 10);
                        const top = parseInt(panel.style.top || '0', 10);
                        localStorage.setItem('accessibilityPanelPos', JSON.stringify({ x: left, y: top }));
                    } catch (e) { console.warn('Accesibilidad: error guardando posición', e); }
                }

                if (header) {
                    header.style.cursor = 'move';
                    header.addEventListener('mousedown', onDown);
                    header.addEventListener('touchstart', onDown, { passive: false });
                }
            })();

            // aplicar y cerrar
            btnApply.addEventListener('click', function () {
                const selectedSwatch = document.querySelector('.accessibility-swatch.selected');
                const selectedText = document.querySelector('.textcolor-swatch.selected');
                const settings = {
                    enabled: accSwitch ? accSwitch.classList.contains('on') : false,
                    font: selectFont.value || '',
                    size: parseInt(rangeSize.value, 10) || 105,
                    bg: selectedSwatch ? (selectedSwatch.dataset.color || '') : '',
                    textColor: (selectedText ? selectedText.dataset.color : (textPicker ? textPicker.value : '')) || ''
                };
                applySettings(settings);
                saveSettings(settings);
                closePanel();
            });

            // reset
            btnReset.addEventListener('click', function () {
                setSwitchState(false);
                selectFont.value = '';
                rangeSize.value = 105;
                if (accSizeDisplay) accSizeDisplay.textContent = '105%';
                swatches.forEach(x => x.classList.remove('selected'));
                textSwatches.forEach(x => x.classList.remove('selected'));
                if (textPicker) textPicker.value = '#000000';
                const settings = { enabled: false };
                applySettings(settings);
                saveSettings(settings);
            });

            // cerrar si clic fuera
            backdrop.addEventListener('click', function (e) {
                if (e.target === backdrop) closePanel();
            });

            // cerrar con ESC
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape' && backdrop.style.display === 'flex') closePanel();
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
